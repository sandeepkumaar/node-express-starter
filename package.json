{
  "name": "node-express-starter",
  "version": "2.0.0",
  "description": "starter template for expressjs",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "prepare": "husky install",
    "start": "cross-env NODE_ENV=production node index.js",
    "start:local": "cross-env NODE_ENV=local-dev PORT=8000 nodemon index.js | pino-pretty -t",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "run-s lint:*",
    "lint:eslint": "eslint src --ignore-path .gitignore --fix && tsc",
    "lint:tsc": "tsc",
    "pre-commit": "npm run lint"
  },
  "lint-staged": {
    "src/*.js": "npm run lint"
  },
  "keywords": [
    "node",
    "expressjs",
    "logger",
    "dev-scripts"
  ],
  "author": "sandeepkumaar.c",
  "license": "ISC",
  "dependencies": {
    "@stdlib/error-to-json": "^0.0.7",
    "body-parser": "^1.20.2",
    "config": "^3.3.9",
    "error-to-json": "^2.0.0",
    "express": "^4.18.2",
    "pino": "^8.14.1",
    "pino-pretty": "^10.0.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/express": "^4.17.17",
    "@types/node": "^20.4.2",
    "@types/uuid": "^9.0.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "nodemon": "^3.0.1",
    "npm-run-all": "^4.1.5"
  }
}
